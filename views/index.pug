extends layout
block content
  header
 

    #title
      h1
        a(href='/') flo app
    nav
    if !user
      h2
      a(href='/log-in') Log-in
      h2
      a(href='/sign-up') Sign-Up
      if user 
        p=user 
    else 
      h2 
        a(href="/log-out") Log-Out 
      h2 
        a(href="/create-post") Create a Post 
      h2 
        a(href="/upgrade") Upgrade your member Status   
    
    #posts 
    if posts 
      for post in posts 
        #postTop
         h3=post.title
         if user
           if user.member_status === "admin" || user.member_status === "member"
            h4=post.user.username
         else 
          h4 USER(ANONYMOUS)
        p=post.content  
        p=post.timestamp 
        if user 
          if user.member_status === "admin"
            form(method="post" )
              input(type="text" name="postid" value=post.id class="hidden")
              input(type='submit' value='DELETE POST')

        hr
